<div class="jumbotron">
  <% if not @trains.nil? %>
    <h2>Available trains:</h2>
    <ul>
      <% @trains.each() do |train| %>
        <p>
          <li><a href="/train/<%= train.id() %> "><%= train.name() %>, <%= train.cities().length() %> cities </a></li>
        </p>
      <% end %>
    </ul>
  <% end %>

  <h2>Add a train:</h2>

  <form action="/train" method="post">
    <div class="form-group" id="train">
      <label for="name">Enter Train's name</label>
      <input class="form-control" type="text" name="name" placeholder="eg: Death" required>
    </div>
    <button class="btn btn-success" type="submit">Add the train</button>
  </form>
</div>

<div class="jumbotron">
  <% if @cities.length > 0 %>
    <h2>Available cities:</h2>
    <ul>
      <% @cities.each() do |city| %>
        <a href="/city/<%= city.id() %>"><li><%= city.name() %></li></a>

      <% end %>
    </ul>
  <% end %>

  <h2>Add a city:</h2>

  <form action="/city" method="post">
    <div class="form-group">
      <label for="name">Enter a name</label>
      <input class="form-control" type="text" name="name" placeholder="eg: Jane Doe" required>
    </div>
